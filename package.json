{
  "name": "rikka",
  "author": {
    "email": "mikkel@milescode.dev",
    "name": "Mikkel RINGAUD",
    "url": "https://github.com/Vexcited"
  },
  "type": "module",
  "license": "MIT",
  "scripts": {
    "watch": "cross-env NODE_ENV=development concurrently -k \"npm:watch-*\"",
    "watch-build": "tsc -p tsconfig.json --watch",
    "watch-start": "nodemon ./dist/index.js",
    "start": "docker-compose up --build",
    "start-daemon": "docker-compose up -d --build",
    "start-build": "rimraf ./dist && tsc -p tsconfig.json",
    "start-production": "cross-env NODE_ENV=production node ./dist/index.js",
    "stop": "docker-compose down"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "ws": "^8.5.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^17.0.17",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  }
}
